{
    "plugins": [
        "jsx-a11y",
    ],
    "extends": [
        "react-app",
        "plugin:jsx-a11y/recommended",
    ],
    "rules": {
        "max-len": [
            1,
            170,
            2,
            {
                "ignoreUrls": true
            }
        ],
        "no-console": 0,
        "linebreak-style": 0,
        "newline-per-chained-call": [
            "error",
            {
                "ignoreChainWithDepth": 2
            }
        ],
        "react/jsx-curly-spacing": [
            2,
            "always"
        ],
        "react/jsx-filename-extension": [
            2,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react-hooks/rules-of-hooks": "error",
        "quotes": [
            "error",
            "single"
        ],
        "jsx-a11y/aria-role": [
            2,
            {
                "ignoreNonDOM": false
            }
        ],
        "react/jsx-equals-spacing": [
            2,
            "never"
        ],
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "semi": [
            2,
            "always"
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "no-multi-spaces": "error",
        "no-trailing-spaces": "error",
        "no-unused-vars": "error",
        "no-irregular-whitespace": "error",
        "curly": "error",
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "eqeqeq": [
            "error",
            "smart"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "no-restricted-imports": [
            "error",
            {
                "paths": [
                    {
                        "name": "common",
                        "message": "Use relative path when inside common project"
                    }
                ],
                "patterns": [
                    "*build*"
                ]
            }
        ],
        "prefer-const": "error"
    }
}